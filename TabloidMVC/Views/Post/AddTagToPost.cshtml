@model TabloidMVC.Models.ViewModels.PostTagFormViewModel

@{
    ViewData["Title"] = "AddTagToPost";
}
<div class="container pt-5">
    <h1>Add Tag To Post</h1>

    @*<p>
        <a class="btn btn-primary" asp-action="Create">New Post</a>
    </p>*@
            <form method="post">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.postId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TagOptions)
            {
                foreach (var postTag in Model.TagsToPost)
                {
                <tr>
                    <td>
                        @item.Name
                        @if(item.Id == postTag.TagId)
                        {
                        <a asp-action="AddTagToPost" asp-route-id="@item.Id" name="TagsToRemove" class="btn btn-outline-primary mx-1" title="Delete">
                            <i class="fas fa-trash"></i></a>
                        @*@Html.DisplayFor(modelItem => item.Name)*@
                        }
                        else
                        {
                        <input name="TagIdsToAdd" type="checkbox" value="@item.Id" />
                            }

</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="View">
                            <i class="fas fa-eye"></i>
                        </a>
                        @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Edit">
                            <i class="fas fa-pencil-alt"></i>
                        </a>*@
                        
                        
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
        <div class="form-group">
            <input type="submit" value="SAVE" class="btn btn-primary btn-block" />
        </div>
    </form>
</div>